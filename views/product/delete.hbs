<form method="POST" enctype="multipart/form-data" class="form center-form" action="/product/delete/:{{_id}}">
  <h2>Delete Product</h2>
  <div class="form-group"> 
    <div class="product-card"><img src="{{image}}" class="product-img"/></div>
  </div>
  <div class="form-group">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" class="input-field" value="{{name}}" disabled="disabled"/>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea id="description" name="description" type="text" disabled="disabled" class="input-field">{{description}}</textarea>
    <input type="submit" value="Delete" class="form-btn btn btn-danger"/>
  </div>
</form>